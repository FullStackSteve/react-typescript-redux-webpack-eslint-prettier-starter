{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug React, TS, Parcel app in Chrome",
            "url": "http://localhost:1234/",
            "webRoot": "${workspaceFolder}/src",
            "pathMapping": {
                "__parcel_source_root": "${workspaceFolder}/src"
            },
            "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
        }
    ]
}
